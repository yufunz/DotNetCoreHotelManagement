@model DetailsRoomViewModel

@{
    ViewData["Title"] = "Room Details";
}

<h1 class="text-center my-5">
    Details @Model.RoomNum
</h1>

<div class="row justify-content-center">

    <div class="row">
        <div class="form-group col-4 mb-3">
            <label asp-for="RoomNum"></label>
            <input asp-for="RoomNum" class="form-control" disabled />
        </div>
        <div class="form-group col-4 mb-3">
            <label asp-for="FloorNum"></label>
            <input asp-for="FloorNum" class="form-control" disabled />
        </div>
        <div class="form-group col-4 mb-3" disabled>
            <label asp-for="RoomType"></label>
            <input asp-for="RoomType" class="form-control" disabled />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-4 mb-3">
            <label asp-for="HotelName"></label>
            <input asp-for="HotelName" class="form-control" disabled />
        </div>
        <div class="form-group col-4 mb-3">
            <label asp-for="RoomStatus"></label>
            <input asp-for="RoomStatus" class="form-control" disabled />
        </div>
        <div class="form-group col-4 mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="2" disabled></textarea>
        </div>
    </div>
    <div class="row">
        <div class="form-group mt-5">
            <div class="container">
                <!--
                <a class="btn btn-warning btn-lg ml-5 col-4 col-sm-12" asp-controller="Rooms" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-danger btn-lg ml-5 col-4 col-sm-12" asp-route-id="@Model.Id" asp-controller="Rooms" asp-action="Delete">Delete</a>
                -->
            </div>
        </div>
    </div>
</div>
